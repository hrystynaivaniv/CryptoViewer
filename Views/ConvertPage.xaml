<UserControl x:Class="CryptoViewer.Views.ConverterPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="450"
             Background="White">

    <UserControl.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="BorderBrush" Value="WhiteSmoke"/>
            <Setter Property="BorderThickness" Value="5"/>
        </Style>
        
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#28a745"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
    </UserControl.Resources>

    <Grid Margin="25">
        <StackPanel>
            <Button Content="Back to Market" 
                Command="{Binding BackCommand}" Style="{StaticResource ButtonStyle}"
                    Margin="10,0,0,0"/>
       
            <TextBlock Text="Currency Converter" FontSize="28" FontWeight="ExtraBold" 
                        Margin="0,25,0,30"/>

            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="FROM" Style="{StaticResource LabelStyle}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}" 
                                 FontSize="22" FontWeight="Bold" Background="Transparent" 
                                 BorderThickness="0" VerticalContentAlignment="Center"/>

                        <ComboBox Grid.Column="1" ItemsSource="{Binding Currencies}" 
                                  SelectedItem="{Binding FromCurrency}" 
                                  BorderThickness="0" Background="Transparent">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Symbol}" FontWeight="Bold" Width="40" Foreground="Green"/>
                                        <TextBlock Text="{Binding Name}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>
                </StackPanel>
            </Border>

            <TextBlock Text="=" HorizontalAlignment="Center" FontSize="24" 
                       Foreground="#28a745" Margin="0,-10,0,5"/>

            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="TO" Style="{StaticResource LabelStyle}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding Result, StringFormat={}{0:N10}}" 
                                   FontSize="22" FontWeight="Bold" 
                                   VerticalAlignment="Center"/>

                        <ComboBox Grid.Column="1" ItemsSource="{Binding Currencies}" 
                                  SelectedItem="{Binding ToCurrency}" 
                                  BorderThickness="0" Background="Transparent">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Symbol}" FontWeight="Bold" Width="40" Foreground="Green"/>
                                        <TextBlock Text="{Binding Name}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>
                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</UserControl>